<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col s2">
  </div>
    <div class="col s8">

<h1>Posts</h1>
<%= form_tag root_path, method: :get do %>
  <%= text_field_tag :q %>
<%= submit_tag 'Buscar', class: 'btn btn-outline-info' %>
<% end %> 
<div id="post_edit"><%= render "form_title"%></div>


<div id="post_show"> Mostrar </div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="post">
    <% @posts.each do |post| %>
      <tr id="post_<%= post.id %>">
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post, remote: true, class: 'btn btn-outline-info'  %></td>
        <td><%= link_to 'Edit', edit_post_path(post), remote: true, class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>

<br>
    </div>
    <div class="col s2">
  </div>
</div>